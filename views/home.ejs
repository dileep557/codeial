


    <h1>codeial / <%= title %> </h1>


    <section id="feed-posts">

        <h2>Posts</h2>

        <% if(locals.user) { %>

        <form action="/posts/create" id="new-post-form" method="POST">

            <textarea name="content" cols="30" rows="3"></textarea>

            <input type="submit" value="Post">




        </form>

        <% } %>

        <div>

            <ul>

                <% for(post of posts) { %>

                    <p>

                        <li>
                          <h1 style="color: black;"><%= post.content %><br></h1>  
                            <h1 style="color: blueviolet;"><%= post.user.name %></h1>
                        </li>


                    </p>

            <% } %>




            </ul>





        </div>





    </section>


